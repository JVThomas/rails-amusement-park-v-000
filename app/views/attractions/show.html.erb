<h5><strong>Name:</strong> <%=@attraction.name%></h5>
<h5><strong>Total Number of Users:</strong> <%=@attraction.users.count%></h5>
<h5><strong>Ticket Requirement:</strong> <%=@attraction.tickets%></h5>
<h5><strong>Height Requirement:</strong> <%=@attraction.min_height%> inches</h5>
<h5><strong>Nausea Rating:</strong> <%=@attraction.nausea_rating%></h5>
<h5><strong>Happiness Rating:</strong> <%=@attraction.happiness_rating%></h5>
<%if !!current_user.admin %>
  <%=link_to "Edit Attraction", edit_attraction_path(@attraction)%>
<%else%>
  <%=form_for(:ride, url: :rides, method: :post) do |f|%>
    <%=f.hidden_field :user_id, value: current_user.id%>
    <%=f.hidden_field :attraction_id, value: @attraction.id%>
    <%=f.submit "Go on this ride"%>
  <%end%>
<%end%>
<br>
<%=link_to "Back", attractions_path%>
